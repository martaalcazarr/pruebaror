<%= form_with(model: @maintenance) do |form| %>
  <% if @maintenance.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(@maintenance.errors.count, "error") %> prohibited this maintenance from being saved:</h2>

      <ul>
        <% @maintenance.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group mb-3">
    <%= form.label :motor_id, "Nombre del motor:", class: "form-label fw-bold" %>
    <p class="form-control-plaintext"><%= @maintenance.motor.name %></p>
  </div>

  <div class="form-group mb-3">
    <%= form.label :equipment_type_id, "Tipo de motor:", class: "form-label fw-bold" %>
    <p class="form-control-plaintext"><%= @maintenance.motor.equipment_type.name %></p>
  </div>

  <div class="form-group mb-3">
    <%= form.label :date, "Fecha:", class: "form-label fw-bold" %>
    <%= form.date_field :date, class: 'form-control' %>
  </div>

  <div class="form-group mb-3">
    <%= form.label :email, "Correo Electrónico del Técnico:", class: "form-label fw-bold" %>
    <%= form.text_field :email, class: 'form-control' %>
  </div>
  <div class="form-group mb-3">
    <%= form.label :city_id, "Elija la ciudad:", class: "form-label fw-bold" %>
    <%= form.collection_select :city_id, City.all, :id, :name, { prompt: 'Seleccione una ciudad' }, { id: 'city-select', class: 'form-control' } %>
  </div>
    <div class="form-group">
    <%= form.label :materials, "Materiales utilizados:" %>
    <%= form.collection_check_boxes :material_ids, Material.all, :id, :name do |cb| %>
      <div class="form-check">
        <%= cb.check_box(class: 'form-check-input') %>
        <%= cb.label(class: 'form-check-label') %>
      </div>
    <% end %>
  </div>


  <%= form.submit "Actualizar Mantenimiento", class: "btn btn-primary mt-3" %>
</div>
<% end %>
