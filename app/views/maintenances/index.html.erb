<header class="bg-primary text-white text-center py-5">
  <h1 class="display-4">Mantenimientos</h1>
</header>

<div class="content">
  <a href="<%= new_maintenance_path %>" class="btn btn-success mt-3">Crear nuevo mantenimiento</a>

  
  <div class="row mt-4">
    <% @maintenances.each do |maintenance| %>
      <div class="col-12 col-md-6 col-lg-3 mb-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><strong>Nombre del motor:</strong> <%= maintenance.motor_name %></h5>
            <p class="card-text"><strong>Fecha:</strong> <%= maintenance.date %></p>
            <p class="card-text"><strong>Email:</strong> <%= maintenance.email %></p>
            <p class="card-text"><strong>Tipo de mantenimiento:</strong> <%= maintenance.maintenance_type.name %></p>
            <p class="card-text"><strong>Ciudad:</strong> <%= maintenance.city.name %></p>
           <p class="card-text"><strong>Materiales:</strong>
              <% maintenance.materials.each_with_index do |material, index| %>
                <%= material.name %>
                <% unless index == maintenance.materials.size - 1 %>
                  ,
                <% end %>
              <% end %>
            </p>
          </div>
          <div class="card-footer">
            <%= link_to "Ver mantenimiento", maintenance, class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= paginate @maintenances %>
